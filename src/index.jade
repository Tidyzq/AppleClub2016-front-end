extends templates/index.jade

block body
  nav.navbar.navbar-fixed-top.navbar-inverse
    .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar-collapse' aria-expanded='false')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#') Brand
    #navbar-collapse.collapse.navbar-collapse
      ul.nav.navbar-nav
        li.active
          a(href='#')
            | Link
            span.sr-only (current)
        li
          a(href='#') Link
  .container.main-content
    h1 Apple Club 2016
    form.form-horizontal
      //- name: String
      //- gender: Number
      //- college: String
      //- phone: String
      //- student_number: { type: String unique: true }
      //- interest: String
      //- introduce: String
      .form-group
        label.col-sm-2.control-label(for='name') Your Name
        .col-sm-10
          input#name.form-control(name='name' type='string' placeholder='Steve Jobs')
      .form-group
        label.col-sm-2.control-label(for='gender') Gender
        .col-sm-10
          select#gender.form-control.select.select-default(name='gender')
            option male
            option female
      .form-group
        label.col-sm-2.control-label(for='college') College
        .col-sm-10
          select#college.form-control.select.select-default(name='college')
            - var colleges = ['中国语言文学系','历史学系','哲学系','社会学与人类学学院','博雅学院','岭南学院','外国语学院','法学院','政治与公共事务管理学院','管理学院','马克思主义学院','心理学系','传播与设计学院','资讯管理学院','数学学院','物理学院','化学学院','地理科学与规划学院','生命科学学院','工学院','材料科学与工程学院','电子与信息工程学院','数据科学与计算机学院','国家保密学院','环境科学与工程学院','中山医学院','光华口腔医学院','公共卫生学院','药学院','护理学院','逸仙学院'];
            each college in colleges
              option= college
      .form-group
        label.col-sm-2.control-label(for='phone') Phone Number
        .col-sm-10
          input#phone.form-control(name='phone' type='string' placeholder='18812345678')
      .form-group
        label.col-sm-2.control-label(for='studentNumber') Student Number
        .col-sm-10
          input#studentNumber.form-control(name='student_number' type='string' placeholder='15330000')
      .form-group
        label.col-sm-2.control-label(for='interest') Interests
        .col-sm-10
          select#interest.form-control.select.select-default(name='interest')
            - var interests = ['技术部','设计部','宣传部','秘书部'];
            each interest in interests
              option= interest
      .form-group
        label.col-sm-2.control-label(for='introduce') Introduce Yourself
        .col-sm-10
          textarea#introduce.form-control(name='introduce' rows='5')
      .form-group
        .col-sm-offset-2.col-sm-10
          button.btn.btn-default(type='submit') Sign in

