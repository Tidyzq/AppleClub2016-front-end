extends templates/index.jade

block body
  nav#navbar.navbar.navbar-default.navbar-fixed-top
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand
          span.apple
          span.brand-text.color1 S
          span.brand-text.color2 Y
          span.brand-text.color3 S
          span.brand-text.color4 U
          span.brand-text.color5 APPLE
          span.brand-text.color6 CLUB
      #navbar-collapse.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/').navbar-item Rigister
  #main-content.container
    form#sign-up-form.form-horizontal(action='/users' method='post')
      //- name: String
      //- gender: Number
      //- college: String
      //- phone: String
      //- student_number: { type: String unique: true }
      //- interest: String
      //- introduce: String
      .col-md-6.col-sm-12
        .form-group
          label.col-md-4.col-sm-2.control-label(for='name') Name
          .col-md-8.col-sm-10
            input#name.form-control.border-color1(name='name' type='string' placeholder='Steve Jobs' oninput='formCheck()' required)
      .col-md-6.col-sm-12
        .form-group
          label.col-md-4.col-sm-2.control-label(for='studentId') Student ID
          .col-md-8.col-sm-10
            input#studentId.form-control.border-color2(name='student_number' type='string' placeholder='15330000' oninput='formCheck()' required)
      .col-md-6.col-sm-12
        .form-group
          label.col-md-4.col-sm-2.control-label(for='gender') Gender
          .col-md-8.col-sm-10
            - var genders = ['Male', 'Female'];
            select#gender.form-control.select-apple.border-color3(name='gender' required)
              each gender in genders
                option= gender
      .col-md-6.col-sm-12
        .form-group
          label.col-md-4.col-sm-2.control-label(for='phone') Phone
          .col-md-8.col-sm-10
            input#phone.form-control.border-color4(name='phone' type='string' placeholder='18800000000' oninput='formCheck()' required)
      .col-md-6.col-sm-12
        .form-group
          label.col-md-4.col-sm-2.control-label(for='college') School
          .col-md-8.col-sm-10
            select#college.form-control.select-apple.border-color5(name='college' required)
              - var colleges = ['中国语言文学系','历史学系','哲学系','社会学与人类学学院','博雅学院','岭南学院','外国语学院','法学院','政治与公共事务管理学院','管理学院','马克思主义学院','心理学系','传播与设计学院','资讯管理学院','数学学院','物理学院','化学学院','地理科学与规划学院','生命科学学院','工学院','材料科学与工程学院','电子与信息工程学院','数据科学与计算机学院','国家保密学院','环境科学与工程学院','中山医学院','光华口腔医学院','公共卫生学院','药学院','护理学院','逸仙学院'];
              each college in colleges
                option= college
      .col-md-6.col-sm-12
        .form-group
          label.col-md-4.col-sm-2.control-label(for='interest') Interest
          .col-md-8.col-sm-10
            select#interest.form-control.select-apple.border-color6(name='interest' required)
              - var interests = ['技术部','设计部','宣传部','秘书部'];
              each interest in interests
                option= interest
      .col-sm-12
        .form-group
          label.col-sm-2.control-label(for='introduce') Introduce
          .col-sm-10
            textarea#introduce.form-control.border-color0(name='introduce' rows='5' placeholder='About yourself' oninput='formCheck()' required)
      center
        .col-sm-12
          .form-group
              button#submit.btn.btn.block.btn-info Submit

